#include <iostream>
#include <conio.h>

using namespace std;

int main()
{
	int x, y, z;
	
	do
	{
		cout << "Enter a number: ";
		cin >> x;
		
			if (x>0)
			{
				z=0;
				y=1;
				while (y<=x)
				{
					z=z+y;
					y++;
				}
				cout << "The sum of all whole numbers from 1 to " << x << " is " << z << ".\n";
			}
			else
			{
				cout << "Thank You!";
			}
	}
	while (x>0);
	
	return 0;
	
}
